package com.systex.main;
import com.systex.model.*;
public class TestProduct {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Product p1 = new Product();
		p1.id = 0001L;
		p1.name = "elderflower syrup";
		p1.unitPrice = 2.99;
		p1.free = false;
		p1.stock = 2000;
		
		Product p2 = new Product();
		p2.id = 0002L;
		p2.name = "shark";
		p2.unitPrice = 25;
		p2.free = false;
		p2.stock = 20000;
		
		Product p3 = new Product(0004L, "rag", 1, false, 16000);
		Product p4 = new Product(0003L, "sheet", 20, false, 15000);
		Product p5 = new Product(0003L, "bed", 200, false, 1000);
		
		System.out.println("Product Stock Table");
		System.out.println("=====================");
		System.out.println("序號\t品名\t單價\t贈品\t庫存量");
		System.out.println(p1);
		System.out.println(p2);
		System.out.println(p3);
		System.out.println(p4);
		System.out.println(p5);
		System.out.println("=====================");
	}

}
